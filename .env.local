# MedixOne - Variables de Entorno de Desarrollo

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/medixone_dev"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="desarrollo-secret-key-medixone-2024"

# JWT Secret (para tokens adicionales)
JWT_SECRET="desarrollo-jwt-secret-medixone-2024"

# Configuración de la aplicación
NODE_ENV="development"
APP_NAME="MedixOne"
APP_VERSION="1.0.0"

# Configuración de archivos
UPLOAD_MAX_SIZE="10485760"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"

# Logging
LOG_LEVEL="info"